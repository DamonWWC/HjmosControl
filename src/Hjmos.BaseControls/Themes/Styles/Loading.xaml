<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Hjmos.BaseControls.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Base/LoadingCircleBaseStyle.xaml" />
        <ResourceDictionary Source="Base/LoadingLineBaseStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  圆形加载条样式  -->
    <Style BasedOn="{StaticResource LoadingCircleBaseStyle}" TargetType="controls:LoadingCircle" />

    <!--  直线加载条样式  -->
    <Style BasedOn="{StaticResource LoadingLineBaseStyle}" TargetType="controls:LoadingLine" />
</ResourceDictionary>