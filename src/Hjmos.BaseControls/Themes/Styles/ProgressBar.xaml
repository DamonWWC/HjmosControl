<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:controls="clr-namespace:Hjmos.BaseControls.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Base/ProgressBarBaseStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>


    <Style TargetType="ProgressBar" BasedOn="{StaticResource ProgressBarBaseStyle}">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
    </Style>

    <Style TargetType="controls:InfoProgressBar" BasedOn="{StaticResource InfoProgressBarStyle}">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
    </Style>
    
</ResourceDictionary>