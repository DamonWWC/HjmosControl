    <Style TargetType="controls:EditButton">
        <Setter Property="Background" Value="White" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:EditButton">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Name="PART_edit"
                            Grid.Column="1"
                            controls:IconElement.Geometry="{StaticResource EditGeometry}"
                            controls:IconElement.Height="12"
                            controls:IconElement.Width="12"
                            Background="{TemplateBinding Background}"
                            Command="interactivity:ControlCommands.EditCommand"
                            Cursor="Hand"
                            Foreground="{TemplateBinding Foreground}"
                            Style="{StaticResource ButtonIcon}" />
                        <Button
                            Name="PART_add"
                            Grid.Column="0"
                            controls:IconElement.Geometry="{StaticResource AddGeometry}"
                            controls:IconElement.Height="12"
                            controls:IconElement.Width="12"
                            Background="{TemplateBinding Background}"
                            Command="interactivity:ControlCommands.AddCommand"
                            Cursor="Hand"
                            Foreground="{TemplateBinding Foreground}"
                            Style="{StaticResource ButtonIcon}"
                            Visibility="Collapsed" />
                        <Button
                            Name="PART_confirm"
                            Grid.Column="1"
                            controls:IconElement.Geometry="{StaticResource CheckGeometry}"
                            controls:IconElement.Height="12"
                            controls:IconElement.Width="12"
                            Background="{TemplateBinding Background}"
                            Command="interactivity:ControlCommands.Confirm"
                            Cursor="Hand"
                            Foreground="{TemplateBinding Foreground}"
                            Style="{StaticResource ButtonIcon}"
                            Visibility="Collapsed" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEdit" Value="True">
                            <Setter TargetName="PART_add" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PART_confirm" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PART_edit" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="IsEdit" Value="False">
                            <Setter TargetName="PART_add" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="PART_confirm" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="PART_edit" Property="Visibility" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>

            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>