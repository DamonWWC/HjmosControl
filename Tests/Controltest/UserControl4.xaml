<UserControl
    x:Class="Controltest.UserControl4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hj="clr-namespace:Hjmos.BaseControls.Controls;assembly=Hjmos.BaseControls"
    xmlns:i="clr-namespace:Hjmos.BaseControls.Interactivity;assembly=Hjmos.BaseControls"
    xmlns:local="clr-namespace:Controltest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <hj:EditButton Margin="740,75,0,110.333" Background="Black" />
        <ListBox
            x:Name="DisposalPoint"
            Grid.Row="1"
            Margin="8"
            HorizontalContentAlignment="Stretch"
            hj:BackgroundSwitchElement.ItemSelectedBackground="#FF20ADC4"
            hj:BackgroundSwitchElement.MouseHoverBackground="#FF20ADC4"
            Background="Transparent"
            BorderThickness="0"
            ItemsSource="{Binding DataList}"
            >
            <!--<i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding DataContext.DisposalPointSelectionChanged, ElementName=AlarmDisposal}" CommandParameter="{Binding ElementName=DisposalPoint, Path=SelectedItem}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>-->
            <ListBox.ItemContainerStyle>
                <Style BasedOn="{StaticResource ListBoxItemBaseStyle}" TargetType="ListBoxItem">
                    <Setter Property="Background" Value="#FF0A3B5A" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Margin" Value="3" />
                    <Setter Property="Padding" Value="15,8" />
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{Binding}" />
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <Button
                                Width="12"
                                Height="12"
                                hj:IconElement.Geometry="{StaticResource ChangeLocation}"
                                Style="{StaticResource ButtonIcon}" />
                            <Button
                                Width="12"
                                Height="12"
                                hj:IconElement.Geometry="{StaticResource ClearGeometry}"
                                Style="{StaticResource ButtonIcon}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
