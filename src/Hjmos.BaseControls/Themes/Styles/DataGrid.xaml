                                        </Grid.RowDefinitions>
                                        <Border
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="3"
                                            Background="{DynamicResource DataGridColumnBackgroundBrush}" />
                                        <!--<Border x:Name="CheckAll"  Width="{Binding CellsPanelHorizontalOffset, RelativeSource={RelativeSource AncestorType=DataGrid},Converter={StaticResource DoubleMinConverter}}" >
                                            <Border.Visibility>
                                                <MultiBinding Converter="{StaticResource HearderSelectAllVisibilityConverter}">
                                                    <Binding Path="Tag" RelativeSource="{RelativeSource AncestorType=DataGrid}"/>
                                                    <Binding Path="HeadersVisibility" RelativeSource="{RelativeSource AncestorType=DataGrid}"/>
