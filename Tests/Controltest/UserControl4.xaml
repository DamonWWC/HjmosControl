        <ListBox
            x:Name="DisposalPoint"
            Grid.Row="1"
            Margin="8"
            HorizontalContentAlignment="Stretch"
            hj:BackgroundSwitchElement.ItemSelectedBackground="#FF20ADC4"
            hj:BackgroundSwitchElement.MouseHoverBackground="#FF20ADC4"
            hj:ListBoxAttach.DropFinish="{Binding DropFinishCommand}"
            hj:ListBoxAttach.EnabledDrop="{Binding IsDrop}"
            AllowDrop="True"
            Background="Transparent"
            BorderThickness="0"
            ItemsSource="{Binding DataList1}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding DataContext.DisposalPointSelectionChanged, ElementName=AlarmDisposal}" CommandParameter="{Binding ElementName=DisposalPoint, Path=SelectedItem}" />
